{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/_main.css') }}">
{% endblock %}

{% block title %}SnowTricks - Reset your password
{% endblock %}

{% block main %}
<div class="container main">
	<div class="d-flex flex-column justify-content-center">
		<h1 class="my-5 text-center text-md-start">Reset your password</h1>
        {{ form_start(resetForm) }}
        <div class="mb-3 text-center text-md-start">
            {{ form_widget(resetForm.plainPassword) }}
        </div>
        <button type="submit" class="btn btn-primary">Reset password</button>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}
