{% extends 'base.html.twig' %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/_main.css') }}">{% endblock %}

{% block title %}SnowTricks - Homepage{% endblock %}

{% block body %}
{% include "_parts/_header.html.twig" %}
{% for message in app.flashes('verify_email_success') %}
    <div class="alert alert-success" role="alert">{{ message }}</div>
{% endfor %}
<!-- Section-->
<section class="py-5" id="tricks">
    <div class="container px-4 px-lg-5 mt-5">
    <div class="col-12 text-center my-4">
    <a href="{{ path('app_trick_new') }}" class="btn btn-primary"><span class="snow-text">Add a new trick</span></a>
    </div>
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
        {% for trick in tricks %}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Trick image-->
                    <a href="{{ path('app_trick_show', {'id': trick.id}) }}">
                    {% for media in trick.medias|filter(media=> media.type is same as("Image")) %}
                            {# <pre>
                                {{ dump(media) }}
                            </pre> #}
                            <img class="card-img-top" src="{{asset('/uploads/' ~ media.fileName)}}" alt="..." />
                    {% endfor %}
                    </a>
                    <!-- Trick details-->
                    <div class="card-body p-3 d-flex flex-row align-items-center justify-content-between">
                        <div class="text-start m-0">
                            <!-- Trick name-->
                            <h4 class="snow-text">{{ trick.name }}</h4>
                        </div>
                        <div class="trick__actions">
                            <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="trick__actions-button"><i class="bi bi-pencil-fill"></i></a>
                            <a href="" class="ms-2 trick__actions-button"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
            
        </div>
    </div>
</section>
{% endblock %}
