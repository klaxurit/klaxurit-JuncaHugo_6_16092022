{% extends 'base.html.twig' %}

{% block title %}Trick{% endblock %}

{% block body %}
<div class="container main">
    <h1>Trick</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trick.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trick.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trick.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ trick.picture }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ trick.video }}</td>
            </tr>
            <tr>
                <th>Picture_alt</th>
                <td>{{ trick.pictureAlt }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ trick.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ trick.createdAt ? trick.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_trick_index') }}" class="btn btn-m btn-secondary">Back to list</a>

    <a href="{{ path('app_trick_edit', {'id': trick.id}) }}" class="btn btn-m btn-primary">Edit</a>

    {{ include('trick/_delete_form.html.twig') }}
</div>
{% endblock %}
